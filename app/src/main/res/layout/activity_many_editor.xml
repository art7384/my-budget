<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/activityMainEditor_TextView_znak"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textSize="40dp" />

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/activityMainEditor_TextView_many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp" />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <TableLayout
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_1"
                android:text="1" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_2"
                android:text="2" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_3"
                android:text="3" />

        </TableRow>
        <TableRow>
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_4"
                android:text="4" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_5"
                android:text="5" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_6"
                android:text="6" />

        </TableRow>
        <TableRow>
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_7"
                android:text="7" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_8"
                android:text="8" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_9"
                android:text="9" />

        </TableRow>
        <TableRow>
            <ImageButton
                android:layout_height="44dp"
                android:src="@mipmap/ic_add_black_24dp"
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_ImageButton_p" />
            <Button
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_Button_0"
                android:text="0" />
            <ImageButton
                android:layout_height="44dp"
                android:src="@mipmap/ic_backspace_black_24dp"
                style="@style/Button.Cal"
                android:id="@+id/activityManyEditor_ImageButton_del" />
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>